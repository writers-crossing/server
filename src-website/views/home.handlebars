<div class="row align-items-md-stretch">
    <div class="col-md-6">
        <div class="h-100 p-4 bg-body-tertiary border rounded-3">
            <h2>{{ month }} Leaderboard</h2>

            {{#if monthlyLeaderboardUsers}}
            <table class="table">
                <thead>
                    <tr>
                        <th>Ranking</th>
                        <th>User</th>
                        <th>Word Count</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each monthlyLeaderboardUsers}}
                    <tr>
                        <td>{{ rowNumber }}</td>
                        <td>
                            <img class="avatar-tiny" src="/users/{{ id }}/avatar.png" />
                            <a href="/users/{{ id }}/">{{ name }}</a>
                        </td>
                        <td>{{ formatWc count }} words</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{else}}
            <p>No users have submitted yet for this month.</p>
            {{/if}}
        </div>
    </div>
    <div class="col-md-6">
        <div class="h-100 p-4 bg-body-tertiary border rounded-3">
            <h2>All Time Leaderboard</h2>

            {{#if allTimeLeaderboardUsers}}
            <table class="table">
                <thead>
                    <tr>
                        <th>Ranking</th>
                        <th>User</th>
                        <th>Word Count</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each allTimeLeaderboardUsers}}
                    <tr>
                        <td>{{ rowNumber }}</td>
                        <td>
                            <img class="avatar-tiny" src="/users/{{ id }}/avatar.png" />
                            <a href="/users/{{ id }}/">{{ name }}</a>
                        </td>
                        <td>{{ formatWc count }} words</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{else}}
            <p>No users have submitted yet this year.</p>
            {{/if}}
        </div>
    </div>
</div>